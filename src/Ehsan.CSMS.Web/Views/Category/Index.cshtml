   @using Ehsan.CSMS.Web.Models
   @model CategoryViewModel

   @{
       ViewData["Title"] = "Home Cashier";
    Layout = "~/Views/Shared/_Layout.cshtml";
   }
<head>
    <link rel="stylesheet" href="~/css/index.css" />
</head>
   
   
  
    <form method="post" asp-action="SearchCategory" asp-controller="Category" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">

        <h1 class="text-dark mb-4">Search Category</h1>

    <div class="form-group pb-3">
            @Html.LabelFor(c => c.categorySearchCriteria.Id, new { @class = "form-label" })
            @Html.TextBoxFor(c => c.categorySearchCriteria.Id, new { @class = "form-control", @placeholder = "Enter Catrgory ID" })
        </div>

    <div class="form-group pb-3">
            @Html.LabelFor(c => c.categorySearchCriteria.CategoryName, new { @class = "form-label" })
            @Html.TextBoxFor(c => c.categorySearchCriteria.CategoryName, new { @class = "form-control", @placeholder = "Enter Catrgory Name" })
        </div>

        <button type="submit" value="Search" class="btn btn mt-3" style="background-color: #ff5722; color: white">Search</button>
        <a type="button" asp-controller="Category" asp-action="SearchCategory" value="Reseat" class="btn btn mt-3 reset-btn">Reset</a>
    </form>

    <br />
    <br />

    <div class="header-container">
        <h3 class="text-dark mb-4">Category List</h3>
        <a href="/Category/Create">
            <i class='bx bx-plus'></i>
            Add Category
        </a>
    </div>

<table class="task-table">
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th></th>
            </tr>
            @foreach (var category in Model.categories)
            {
                <tr>
                    <td>@Html.Encode(category.Id)</td>
                    <td>@Html.Encode(category.CategoryName)</td>
                    <td>
                        <div class="dropdown">
                            <button class="dropdown-button">⋮</button>
                            <div class="dropdown-content">
                                @Html.ActionLink("Edit", "Edit", new { id = category.Id })
                                @Html.ActionLink("Details", "Details", new { id = category.Id })
                                @Html.ActionLink("Delete", "DeleteCategory", new { id = category.Id })
                            </div>
                        </div>
                    </td>
                </tr>
            }
    </table>




  