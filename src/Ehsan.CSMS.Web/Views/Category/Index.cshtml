@model CategoryViewModel

@{ 
       ViewData["Title"] = "Home Cashier";
 }
<link rel="stylesheet" href="~/css/index.css" asp-append-version="true"/>



<form method="post" asp-action="Index" asp-controller="Category" enctype="multipart/form-data" class="p-4 shadow-sm border rounded mb-5">

    <h1 class="text-dark mb-4">Search Category</h1>

    <div class="form-group pb-3">
            @Html.LabelFor(c => c.categorySearchCriteria.Id, new { @class = "form-label" })
            @Html.TextBoxFor(c => c.categorySearchCriteria.Id, new { @class = "form-control", @placeholder = "Enter Catrgory ID" })
        </div>

    <div class="form-group pb-3">
            @Html.LabelFor(c => c.categorySearchCriteria.Name, new { @class = "form-label" })
            @Html.TextBoxFor(c => c.categorySearchCriteria.Name, new { @class = "form-control", @placeholder = "Enter Catrgory Name" })
        </div>

      <button type="submit" value="Search" class="btn mt-3 btn mainbtn sumbit">Search</button>
    <a type="button" asp-controller="Category" asp-action="Index" class="btn btn mt-3 reset-btn">Reset</a>
    </form>

   

    <div class="header-container">
        <h3 class="text-dark mb-4">Category List</h3>
         <a asp-action="Create" asp-controller="Category">
            <i class='bx bx-plus'></i>
            Add Category
        </a>
    </div>

<table class="task-table">
            <tr>
                <th>Category Name</th>
                <th></th>
            </tr>
            @foreach (var category in Model.categories)
            {
                <tr>
                    <td>@Html.Encode(category.Id)</td>
                    <td>@Html.Encode(category.Name)</td>
                    <td>
                        <div class="dropdown"> 
                            <button class="dropdown-button">⋮</button>
                            <div class="dropdown-content">
                                 @Html.ActionLink("Edit", "Edit", new { id = category.Id })
                                @Html.ActionLink("Details", "Details", new { id = category.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = category.Id })
                            </div>
                        </div>
                    </td>
                </tr>
            }
    </table>




  