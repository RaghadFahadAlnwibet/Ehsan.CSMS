@model Ehsan.CSMS.Dtos.CategoryDto

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Edit" asp-controller="Category" enctype="multipart/form-data" class="p-4 shadow-sm border rounded ">
    <h2 class="mb-4 text-dark">Edit Category</h2>
    <div class="mb-3 ">
        @Html.LabelFor(c => c.Id, new { @class = "form-label"})
        @Html.TextBoxFor(c => c.Id, htmlAttributes: new { @class="form-control" ,@readonly = "readonly" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(c => c.CategoryName, new { @class="form-label" })
        @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control", @placeholder = "Enter Category Name", @required = "required" })
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn-primary mt-3 w-100" value="Save" style="background-color: #ff5722; color: white">Update Category</button>
    </div>


</form>