<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!--title bar-->
    <title>@ViewData["Title"] - Meating Beans</title>
    <link rel='icon' type="image/x-icon" href='/images/logo.jpg' />
    <meta name="description" content="An easy-to-use Order Management System for coffee shops to manage orders and track inventory.">

    <!--bootstrap and CSS links-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/css/style.css" rel="stylesheet" />
    <!--fonts links-->

    <!--icons link-->
    <link rel="stylesheet" href="https://cdn.lineicons.com/4.0/lineicons.css" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>
    <body>
        <div class="wrapper">
            <aside id="sidebar">
                <div class="d-flex">
                    <button id="toggle-btn" type="button">
                    <i class='bx bx-grid-alt' title="Meating Beans"></i>
                    </button>
                    <div class="sidebar-logo">
                    <a  asp-controller="Order" asp-action="index" title="Meating Beans">Meating Beans </a>
                    </div>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                    <a  asp-controller="Cashier" asp-action="index" class="sidebar-link" title="Go to Cachier">
                        <i class='bx bx-user-check'></i>
                         <span>Cashier</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                    <a  asp-controller="Customer" asp-action="index" class="sidebar-link" title="Go to Customer">
                        <i class='bx bxs-user-detail'></i>
                            <span>Customer</span>
                        </a>
                    </li>
                   
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link has-dropdown collapsed" data-bs-toggle="collapse"
                       data-bs-target="#multi" aria-expanded="false" aria-controls="multi" >
                        <i class='bx bx-list-ul'></i>
                        <span>Menu</span>
                        </a>
                    <ul id="multi" class="sidebar-dropdown list-unstyled collapsed" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-controller="Product" asp-action="index" class="sidebar-link collapsed" data-bs-toggle="collapse" title="Display Stock"
                               data-bs-target="#multi-tow" aria-expanded="false" aria-controls="multi-tow">
                                <i class='bx bx-coffee'></i>
                                Product
                           </a>
                            <ul id="multi-tow" class="sidebar-dropdown list-unstyled collapse">
                                <li class="sidebar-item">
                                    <a asp-controller="Product" asp-action="index" class="sidebar-link" title="Go to Products">
                                        <i class='bx bxs-coffee-bean' style='color:#ffffff'></i>
                                        Product
                                        </a>
                                </li>
                                <li class="sidebar-item">
                                    <a asp-controller="Category" asp-action="index" class="sidebar-link" title="Go to Category">
                                        <i class='bx bxs-hot'></i>
                                        Category
                                    </a>
                                </li>
                           </ul>
                        </li>
                    </ul>
                    </li>
                <li class="sidebar-item">
                    <a  asp-controller="Order" asp-action="index" class="sidebar-link active" title="Go to Orders">
                        <i class='bx bxs-shopping-bags'></i>
                        <span>Order</span>
                    </a>
                </li>
                </ul>
                <div class="sidebar-footer">
                        <div class="social-links">
                            <a href="mailto:raghadalnuwaybit@gmail.com" class="sidebar-link">
                                <i class='bx bxl-gmail'></i>
                            </a>
                           
                        </div>
                    </div>
            </aside>
            <div class="main p-3">
            <div class="container pt-5">
                    @RenderBody()
                </div>
            </div>
        </div>


    <script src="~/js/SideBarScripts/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!--Client side validation-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> 
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.21.0/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("createOrderScript", required: false)
    @RenderSection("editOrderScript", required: false)
    @RenderSection("orderDetailsScript", required: false)
</body>
</html>













