@model Ehsan.CSMS.Dtos.CashierDto
@{
    ViewData["Title"] = "Cashier Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" asp-action="Edit" asp-controller="Cashier" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">
    <h2 class="mb-4 text-darl">Details</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Id, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.CashierName, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.CashierName, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
    </div>

</form>
