@model Ehsan.CSMS.Dtos.ProductDto;
@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<form method="post" asp-action="Edit" asp-controller="Product" enctype="multipart/form-data" class="p-4 shadow-sm border rounded ">
    <h2 class="mb-4 text-dark">Edit product</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Id, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Id, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.CategoryId, new { @class = "form-label" })
        @Html.DropDownListFor(c => c.CategoryId, ViewBag.CategoryList as SelectList, "Select category", new { @class = "form-control", @required = "required" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.ProductName, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.ProductName, new { @class = "form-control", @placeholder = "Enter Product Name", @readonly = "readonly" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(c => c.ProductPrice, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.ProductPrice, new { @class = "form-control", @placeholder = "Enter Product Price", @required = "required" })
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn-primary mt-3 w-100" value="Save" style="background-color: #ff5722; color: white">Update Product</button>
    </div>

</form>
