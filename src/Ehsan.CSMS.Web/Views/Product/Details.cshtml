@model ProductResponse

@{
     ViewData["Title"] = "Product Details"; 
} 



<form method="post" asp-action="Edit" asp-controller="Order" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">
    <h2 class="mb-4 text-dark">Details</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Id, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Id, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.CategoryId, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Category.Name,  new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.Name, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Name,  new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.Price, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Price,  new { @class = "form-control", @readonly = "readonly" })
    </div>
</form>

