@model Ehsan.CSMS.Dtos.CostumerDto

@{
    ViewData["Title"] = "Costumer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form method="post" asp-action="Edit" asp-controller=" Customer" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">
    <h2 class="mb-4 text-dark">Details</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Id, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Id, htmlAttributes: new { @class = "form-control", @readonly = "readonly"})
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.CustomerName, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.CustomerName, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.ContactInfo, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.ContactInfo, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.LoyaltyPoints, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.LoyaltyPoints, new { @class = "form-control", @readonly = "readonly" })
    </div>
</form>