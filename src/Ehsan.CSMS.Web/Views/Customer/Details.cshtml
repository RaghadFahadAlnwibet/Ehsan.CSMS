@model CustomerResponse

@{ 
    ViewData["Title"] = "Costumer Details";
}



<form method="post" asp-action="Details" asp-controller=" Customer" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">
    <h2 class="mb-4 text-dark">Details</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Id, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Id, htmlAttributes: new { @class = "form-control", @readonly = "readonly"})
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.Name, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.MobileNumber, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.MobileNumber, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="mb-3">
        @Html.LabelFor(c => c.LoyaltyPoint, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.LoyaltyPoint, new { @class = "form-control", @readonly = "readonly" })
    </div>
</form>