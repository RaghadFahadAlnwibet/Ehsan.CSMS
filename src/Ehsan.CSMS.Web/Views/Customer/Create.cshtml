@model CustomerAddRequest

@{ 
    ViewData["Title"] = "Add Customer";
}



<form method="post" asp-action="Create" asp-controller="Customer" enctype="multipart/form-data" class="p-4 shadow-sm border rounded">
    <h2 class="mb-4 text-dark">Create Costumer</h2>

    <div class="mb-3">
        @Html.LabelFor(c => c.Name, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control", @placeholder = "Enter Customer Name"})
        @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
    </div>
    <div class="mb-3">
        @Html.LabelFor(c => c.MobileNumber, new { @class = "form-label" })
        @Html.TextBoxFor(c => c.MobileNumber, new { @class = "form-control", @placeholder = "Enter Mobile Number" })
        @Html.ValidationMessageFor(c => c.MobileNumber, "", new { @class = "text-danger" })
    </div>
    <div class="mb-1">
        <button type="submit" class="btn btn mt-3 w-100" style="background-color: #ff5722; color: white">Save</button>
    </div>
    @if (ViewBag.Errors is not null)
    {
        <div class="text-red ml">
            <ul>
                @foreach (string error in ViewBag.Errors)
                {
                    <li>@error</li>
                }
            </ul>
        </div>
    }
</form>